{
  "name": "reason-recoil",
  "version": "0.9.4",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "test": "jest",
    "format": "find ./src -iname '*.re' | xargs bsrefmt --in-place && find ./src -iname '*.rei' | xargs bsrefmt -i true --in-place && find ./test -iname '*.re' | xargs bsrefmt --in-place && find ./examples -iname '*.re' | xargs bsrefmt --in-place",
    "examples": "moduleserve ./examples --port 8000"
  },
  "keywords": [
    "BuckleScript",
    "Recoil",
    "ReasonML",
    "Reason",
    "React"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "^7.3.2",
    "jest": "^24.9.0",
    "moduleserve": "^0.9.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reason-react": "^0.9.1",
    "reason-test-framework": "^0.3.2",
    "recoil": "^0.0.10"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reason-react": "^0.9.1",
    "recoil": "^0.0.10"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ],
    "roots": [
      "test"
    ],
    "testMatch": [
      "**/*__test.bs.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(bs-platform|reason-react|reason-react-compat|reason-react-update|bs-webapi|bs-css|bs-css-emotion)/)"
    ]
  }
}
